{
  "rules": {
    "games": {
      "$gameId": {
        ".read": true,
        ".write": true,
        ".validate": "newData.hasChildren(['players', 'currentPlayerIndex', 'message', 'createdAt'])",
        "players": {
          "$playerId": {
            ".validate": "newData.hasChildren(['id', 'name', 'position', 'lastCheckpoint', 'color', 'corner'])"
          }
        }
      }
    },
    "leaderboard": {
      ".read": true,
      ".write": true,
      "$playerKey": {
        ".validate": "newData.hasChildren(['name', 'wins', 'gamesPlayed', 'totalGames'])"
      }
    },
    "gameHistory": {
      ".read": true,
      ".write": true,
      "$gameId": {
        ".validate": "newData.hasChildren(['gameId', 'players', 'winner', 'completedAt'])"
      }
    }
  }
}

